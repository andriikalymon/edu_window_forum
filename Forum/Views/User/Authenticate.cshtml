@model Forum.Domain.ViewModels.User.AuthenticateUserViewModel

<div class="text-center">
    <img src="~/Pictures/authenticate-picture.png" class="rounded" alt="Authenticate Picture">
</div>
<form method="post" asp-controller="User" asp-action="Authenticate">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
        <span style="color:red" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password">
        <span style="color:red" asp-validation-for="Password"></span>
    </div>
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <button class="btn btn-dark">Submit</button>
            </div>
        </div>
    </div>
</form>
